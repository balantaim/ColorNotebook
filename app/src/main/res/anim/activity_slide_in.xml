<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:startOffset="200">

    <scale
        android:duration="200"
        android:fromXScale="0.5"
        android:toXScale="1"
        android:fromYScale="0.5"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%" />

    <translate
        android:fromXDelta="100%p"
        android:toXDelta="0%p"
        android:duration="200"/>

</set>