<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DefaultColorNotebook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_900</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_darker</item>
        <item name="colorSecondaryVariant">@color/teal_900</item>
        <item name="colorOnSecondary">@color/teal_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray</item>
        <item name="badgeStyle">@color/gray</item>
        <item name="customColorValue">@color/white</item>
        <item name="colorError">@color/error_night</item>
    </style>

    <style name="Theme.BlueColorNotebook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/blue_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/purple_900</item>
        <item name="badgeStyle">@color/purple_900</item>
        <item name="customColorValue">@color/white</item>
        <item name="colorError">@color/error_night</item>
    </style>

    <style name="Theme.DarkColorNotebook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="badgeStyle">@color/gray</item>
        <item name="customColorValue">@color/black</item>
        <item name="colorError">@color/error_night</item>
    </style>

