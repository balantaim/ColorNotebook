<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DefaultColorNotebook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_900</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_darker</item>
        <item name="colorSecondaryVariant">@color/teal_900</item>
        <item name="colorOnSecondary">@color/teal_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" >@color/teal_900</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray</item>
        <item name="badgeStyle">@color/gray</item>
        <item name="customColorValue">@color/white</item>
        <item name="colorError">@color/error_night</item>
        <item name="cardBackgroundColor">@color/black</item>
        <!-- Transition Animation -->
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
<!--        <item name="android:windowActivityTransitions">true</item>-->

        <!-- specify enter and exit transitions -->
<!--        <item name="android:windowEnterTransition">@anim/activity_slide_in</item>-->
<!--        <item name="android:windowExitTransition">@anim/activity_slide_out</item>-->
    </style>

    <style name="Theme.BlueColorNotebook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/blue_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" >@color/blue_700</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/purple_900</item>
        <item name="badgeStyle">@color/purple_900</item>
        <item name="customColorValue">@color/white</item>
        <item name="colorError">@color/error_night</item>
        <item name="cardBackgroundColor">@color/black</item>
        <!-- Transition Animation -->
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
        <!-- enable window content transitions -->
<!--        <item name="android:windowActivityTransitions">true</item>-->

        <!-- specify enter and exit transitions -->
<!--        <item name="android:windowEnterTransition">@anim/activity_slide_in</item>-->
<!--        <item name="android:windowExitTransition">@anim/activity_slide_out</item>-->

    </style>

    <style name="Theme.DarkColorNotebook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="badgeStyle">@color/gray</item>
        <item name="customColorValue">@color/black</item>
        <item name="colorError">@color/error_night</item>
        <item name="cardBackgroundColor">@color/gray</item>
        <!-- Transition Animation -->
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
<!--        <item name="android:windowActivityTransitions">true</item>-->

        <!-- specify enter and exit transitions -->
<!--        <item name="android:windowEnterTransition">@anim/activity_slide_in</item>-->
<!--        <item name="android:windowExitTransition">@anim/activity_slide_out</item>-->
    </style>

    <style name="CustomAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_back</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_back</item>
    </style>

    <style name="Theme.Tutorial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_900</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_darker</item>
        <item name="colorSecondaryVariant">@color/teal_900</item>
        <item name="colorOnSecondary">@color/teal_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray</item>
        <item name="badgeStyle">@color/gray</item>
        <item name="customColorValue">@color/white</item>
        <item name="colorError">@color/error_night</item>
    </style>
</resources>